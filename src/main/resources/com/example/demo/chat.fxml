<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>

<!--        prefHeight="800.0" prefWidth="1280.0"-->

<?import javafx.scene.shape.Rectangle?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="640.0"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.view.ChatController"
            stylesheets="@./style.css">


    <top>
        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10" styleClass="topBar">
            <Text textAlignment="CENTER" text="Online Chat"/>
        </HBox>
    </top>

    <left>

        <VBox fx:id="usersBar" prefWidth="300" spacing="20" styleClass="usersBar">
            <Text text="Sayyed Ali Tayyeb" textAlignment="CENTER" styleClass="user"/>
            <Text text="Moeen Samadi Azad"/>
            <Text text="Arya Torabi"/>
        </VBox>
    </left>
    <center>
        <VBox fx:id="chatSection" alignment="CENTER">
            <Text text="hello!"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="bottomBar">
            <TextField fx:id="messageField" promptText="Write a message..."/>
            <Button text="Send" onAction="#sendMessage"/>
        </HBox>
    </bottom>
</BorderPane>

